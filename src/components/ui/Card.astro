---
interface Props {
  className?: string;
}

const { className } = Astro.props;
---

<div class={`card bg-white rounded-lg border border-blue-100 p-6 ${className || ''}`}>
  <slot />
</div>

<style is:global>
  /* Aquí puedes añadir estilos globales si es necesario para las tarjetas */
  .card{
    box-shadow: rgba(0, 113, 188, 0.5) 0px 10px 36px 0px, rgba(17, 17, 24,0.06) 0px 0px 0px 1px;
  }
</style>